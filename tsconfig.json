{
    "compilerOptions": {
        "target": "ES2020",
        "experimentalDecorators": true,
        "useDefineForClassFields": false,
        "module": "ESNext",
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ],
        "skipLibCheck": true,
        /* Bundler mode */
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        /* Linting */
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "paths": {
            "@assets/*": [
                "src/assets/*"
            ],
            "@components/*": [
                "src/components/*"
            ],
            "@containers/*": [
                "src/containers/*"
            ],
            "@styles/*": [
                "src/styles/*"
            ],
            "@/*": [
                "src/*"
            ],
            "@app-input/*": [
                "./src/components/app-input/*"
            ],
            "@mixins/*": [
                "./src/styles/mixins/*"
            ],
            "@app-checkbox/*": [
                "./src/components/app-checkbox/*"
            ],
            "@icons/*": [
                "./src/assets/icons/*"
            ],
            "@app-todo/*": [
                "src/components/app-todo/*"
            ],
            "@types/*": [
                "src/types/*"
            ],
            "@slices/*": [
                "src/slices/*"
            ],
            "@store/*": [
                "src/store/*"
            ]
        }
    },
    "include": [
        "src"
    ]
}